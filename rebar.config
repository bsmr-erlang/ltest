{eunit_opts, [verbose]}.
{eunit_compile_opts, [
    {src_dirs, ["test", "src"]}
  ]}.

{deps, [
   {lfe, {git, "git://github.com/rvirding/lfe.git", {tag, "v1.0.2"}}},
   {lutil, {git, "git://github.com/lfex/lutil.git", {tag, "0.8.1"}}},
   {color, {git, "git://github.com/julianduque/erlang-color.git", {tag, "v0.2.0"}}}
  ]}.

{plugins, [
   {'lfe-compile', {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.4.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

{project_plugins, [
   {lodox, {git, "git://github.com/lfe-rebar3/lodox.git", {tag, "0.12.14"}}}
  ]}.

{profiles, [
   {dev,
     [{deps, [
        {lfe, {git, "https://github.com/rvirding/lfe.git", {tag, "v1.0.2"}}}]},
      {plugins, [
        {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.0"}}}]}
      ]}
  ]}.
